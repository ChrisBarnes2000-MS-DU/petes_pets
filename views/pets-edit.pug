extends layout

block content
    .row.justify-content-center
        .col-sm-6
            legend Edit Pet
            form(action=`/pets/${pet._id}?_method=PUT`, method="POST")
                .form-group
                    label Name
                    input.form-control(name="name" value=pet.name)
                .form-group
                    label Birthday
                    input.form-control(name="birthday" type="datetime-local" id="date" min="2000-01-01T00:00" value=pet.birthday)
                .form-group
                    label Species
                    input.form-control(name="species" value=pet.species)
                .form-group
                    label Avatar*
                    input.form-control(name="avatar" type="file")
                .form-group
                    label Favorite Food
                    input.form-control(name="favoriteFood" value=pet.favoriteFood)
                .form-group
                    label Description
                    textarea.form-control(name="description")=pet.description
                .form-group
                    label Price*
                    input.form-control(name="price" type="number" step="0.01" value=pet.price)
                .form-group
                    label Purchased
                    input.form-control(name="purchasedAt" type="datetime-local" id="date" min="2000-01-01T00:00" value=pet.purchasedAt)
                    button(id="time") set date/time

                button(type="cancel").btn.btn-warning cancel
                button(type="submit").btn.btn-primary Save

            .text-right
                form(action=`/pets/${pet._id}?_method=DELETE`, method="POST")
                    button(type="submit").btn.btn-danger Remove
